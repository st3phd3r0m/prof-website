{% extends 'base-admin.html.twig' %}

{% block title %}SkillsAndFeatures index{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">SkillsAndFeatures index</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Atouts et comp√©tences</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th>What</th>
                        <th>Whatmore</th>
                        <th>Rate</th>
                        <th>Skill_or_feature</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for skills_and_feature in skills_and_features %}
                    <tr>
                        <td>{{ skills_and_feature.what }}</td>
                        <td>{{ skills_and_feature.whatmore }}</td>
                        <td>{{ skills_and_feature.rate }}</td>
                        <td>{{ skills_and_feature.skillOrFeature }}</td>
                        <td>
                            <a href="{{ path('skills_and_features_show', {'id': skills_and_feature.id}) }}">show</a>
                            <a href="{{ path('skills_and_features_edit', {'id': skills_and_feature.id}) }}">edit</a>
                            {{ include('skills_and_features/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('skills_and_features_new') }}">Create new</a>

		</div>
	</div>
{% endblock %}
