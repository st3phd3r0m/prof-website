{% extends 'base-admin.html.twig' %}

{% block title %}MiscellaneousElements index{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">MiscellaneousElements index</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">El√©ments de la page web</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Updated at</th>
                        <th>Is_aside</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for miscellaneous_element in miscellaneous_elements %}
                    <tr>
                        <td>{{ miscellaneous_element.title }}</td>
                        <td>
                            {% if miscellaneous_element.image is not empty %}
                            <img src="{{ asset('images/'~ miscellaneous_element.image ) | imagine_filter('miniatures') }}" alt="{{ miscellaneous_element.alt }}">
                            {% endif %}
                        </td>
                        <td>{{ miscellaneous_element.updateAt ? miscellaneous_element.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ miscellaneous_element.isAside ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('miscellaneous_elements_show', {'id': miscellaneous_element.id}) }}">show</a>
                            <a href="{{ path('miscellaneous_elements_edit', {'id': miscellaneous_element.id}) }}">edit</a>
                            {{ include('miscellaneous_elements/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('miscellaneous_elements_new') }}">Create new</a>

		</div>
	</div>
{% endblock %}
