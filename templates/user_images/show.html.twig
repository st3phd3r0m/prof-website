{% extends 'base-admin.html.twig' %}

{% block title %}UserImages
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">User Images</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Images Administrateurs</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ user_image.id }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>
							<img src="{{ asset('images/'~ user_image.name ) | imagine_filter('min300') }}" alt="{{ user_image.alt }}">
						</td>
					</tr>
					<tr>
						<th>Alt</th>
						<td>{{ user_image.alt }}</td>
					</tr>
					<tr>
						<th>Updated_at</th>
						<td>{{ user_image.updatedAt ? user_image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('user_images_index') }}">back to list</a>

			<a href="{{ path('user_images_edit', {'id': user_image.id}) }}">edit</a>

			{{ include('user_images/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
