{% extends 'base-admin.html.twig' %}

{% block title %}Courriels{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Courriels</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Courriels</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ courriel.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ courriel.name }}</td>
                    </tr>
                    <tr>
                        <th>Mail_from</th>
                        <td>{{ courriel.mailFrom }}</td>
                    </tr>
                    <tr>
                        <th>Subject</th>
                        <td>{{ courriel.subject }}</td>
                    </tr>
                    <tr>
                        <th>Message</th>
                        <td>{{ courriel.message }}</td>
                    </tr>
                    <tr>
                        <th>Sent_at</th>
                        <td>{{ courriel.sentAt ? courriel.sentAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('courriels_index') }}">back to list</a>

            {{ include('courriels/_delete_form.html.twig') }}
            
		</div>
	</div>
{% endblock %}
