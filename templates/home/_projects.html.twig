<div id="websites">
	{% for website in websites %}
		<figure>
            <i class="las la-external-link-alt w3-text-dark-gray"></i>
			<a href="{{ website.url }}" title="{{ website.alt }}" target="_blank">
				<img src="{{ asset('images/'~ website.image )|imagine_filter('min300') }}" alt="{{ website.alt }}">
			</a>
			<div>
				<p class="description">
					{{ website.name|raw }}
					{% if  website.repoUrl %}
					<a href="{{ website.repoUrl }}" title="Voir sur Github" target="_blank">Voir sur Github</a>
					{% endif %}
				</p>
			</div>
		</figure>
	{% endfor %}
</div>
